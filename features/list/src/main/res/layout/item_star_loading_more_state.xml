<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/text_try_again"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/error_loading_more_try_again"
        android:textAlignment="center"
        android:background="@android:color/black"
        android:paddingStart="@dimen/double_grid"
        android:paddingEnd="@dimen/double_grid"
        android:paddingTop="@dimen/large_grid"
        android:paddingBottom="@dimen/large_grid"
        android:textColor="@color/white" />

    <ProgressBar
        android:id="@+id/progress_loading_more"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center" />

</FrameLayout>